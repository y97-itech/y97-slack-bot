<!DOCTYPE html>
<html>
  <head>
    <title>Y97SlackBot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">

    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% if signed_in? %>
      <div id="app" data-auth="true" data-user-name="<%= current_user.user_info.profile.display_name %>" data-user-image="<%= current_user.user_info.profile.image_48 %>" data-team-name="<%= current_user.team_info.name %>"></div>
    <% else %>
      <div id="app" data-auth="false"></div>
    <% end %>
  </body>
</html>
